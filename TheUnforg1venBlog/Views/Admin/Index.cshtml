@model IEnumerable<Post>

@{ }

<h2>Only for admin</h2>

<div>
    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-right">ID</th>
            <th>Name</th>
            <th class="text-center">Actions</th>
        </tr>
        @foreach (var post in Model)
        {
            <tr>
                <td class="text-right">@post.PostID</td>
                <td>@post.Title</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-warning" asp-controller="Admin" asp-action="Edit" asp-route-postId="@post.PostID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="Remove" asp-route-postId="@post.PostID">Remove</a>
                </td>
            </tr>
        }
    </table>
    <div class="text-center">
        <a asp-controller="Admin" asp-action="Edit" class="btn btn-secondary">Create Post</a>
    </div>
</div>
