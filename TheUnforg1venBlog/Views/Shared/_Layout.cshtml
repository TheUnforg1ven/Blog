<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark" role="navigation">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">TheUnforg1ven Blog</a>
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item "><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item "><a asp-controller="Home" asp-action="Edit" class="nav-link">Create Post</a></li>
                    <li class="nav-item "><a asp-controller="Admin" asp-action="Index" class="nav-link">Admin corner</a></li>
                    @await Html.PartialAsync("LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container card-body">
        @RenderBody()
    </div>
</body>
</html>
